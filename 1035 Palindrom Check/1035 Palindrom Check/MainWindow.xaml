<Window x:Name="Palindrom_Check" x:Class="_1035_Palindrom_Check.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1035_Palindrom_Check"
        mc:Ignorable="d"
        Title="Palindrom Check" Height="450" Width="800"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF373232" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtInput" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Height="55" Width="529" Grid.Column="1" Foreground="#FF64C8FF" FontSize="36" FontFamily="Arial" Background="#FF0A0A0A" Text="Eingabe..." />
        <Label x:Name="lblTitle" Content="Palindrom Check" HorizontalAlignment="Center" Margin="0,55,0,0" VerticalAlignment="Top" Height="34" Width="168" Grid.Column="1" FontFamily="Arial" FontSize="20" Foreground="#FF64C8FF"/>
        <Image Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="100" Margin="345,301,0,0" VerticalAlignment="Top" Width="100"/>
        <Image x:Name="imgOk" HorizontalAlignment="Center" Height="100" Margin="0,301,0,0" VerticalAlignment="Top" Width="100" Source="/img0001.png" Grid.Column="1"/>
        <Image x:Name="imgNo" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="345,301,0,33" Width="100" Source="/img0002.png"/>

    </Grid>
</Window>
